{
  "name": "graphql",
  "version": "1.0.0",  
  "scripts": {
    "build": "concurrently \"npm run lambdas\" \"npm run schema:generate\"",
    "dev": "concurrently \"npm run lambdas:dev\" \"npm run schema:generate:dev\" \"npm run schema:upload:dev\"",
    "lambdas": "webpack --target=webworker",
    "lambdas:dev": "webpack --target=webworker --watch",
    "schema:generate": "node scripts/schemaScript.js",
    "schema:generate:dev": "chokidar './schemas/**/*.graphql' -c 'node scripts/schemaScript.js'",
    "schema:upload": "curl -X POST localhost:8080/admin/schema --data-binary @__schema.graphql",
    "schema:upload:dev": "chokidar '__schema.graphql' -c 'curl -X POST localhost:8080/admin/schema --data-binary @__schema.graphql'"
  },
  "author": "",
  "license": "ISC",
  "keywords": [],
  "description": "",
  "devDependencies": {
    "@graphql-tools/load-files": "^6.2.7",
    "@graphql-tools/merge": "^6.2.10",
    "@slash-graphql/lambda-types": "^1.2.0",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^6.0.0",
    "ts-loader": "^8.0.17",
    "typescript": "^4.2.3",
    "webpack": "^5.24.3",
    "webpack-cli": "^4.5.0"
  }
}
